<!DOCTYPE html>
<html>
	<%- include('../partials/head'); %>
	<head>
		<link rel="stylesheet" href="/stylesheets/edit.css" />
	</head>
	<body>
		<%- include('../partials/header'); %>
		<div class="main-container">
			<form
				class="edit-form"
				action="/blogs/edit/<%= blog.blogid %>"
				method="post"
			>
				<div class="edit-container">
					<div class="title-row">
						<div class="cancel-container">
							<a class="btn btn-outline-dark cancel" href="/blogs"
								><i class="fa fa-times cancel-edit"></i
							></a>
						</div>
						<div class="title">
							<input
								class="form-control"
								name="title"
								id="Title"
								value="<%= blog.title %>"
							/>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-sm-6">
							<textarea
								class="form-control"
								cols="20"
								name="content"
								id="Content"
								maxlength="32000"
								rows="7"
							>
<%= blog.content %></textarea
							>
						</div>
					</div>

					<div class="form-group row">
						<label class="col-form-label col-sm-2"></label>
						<div class="col-sm-3">
							<input type="submit" value="Save" class="btn btn-delete2" />
						</div>
					</div>
				</div>
			</form>
		</div>
	</body>
	<%- include('../partials/footer'); %>
</html>
